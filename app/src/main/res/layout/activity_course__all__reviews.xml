<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course_All_Reviews">

    <TextView
        android:id="@+id/head_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Review"
        android:textAlignment="center"
        android:padding="12dp"
        android:textColor="@color/orange_500"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/ttl_reviews_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/head_new"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/i11"
        android:layout_width="190sp"
        android:visibility="gone"
        android:layout_height="190sp"
        android:src="@drawable/empty_history"
        android:layout_marginTop="70sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/t11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Reviews Found"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="264dp"
        android:layout_centerHorizontal="true"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyc_course_all_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/ttl_reviews_txt"
        />

</RelativeLayout>