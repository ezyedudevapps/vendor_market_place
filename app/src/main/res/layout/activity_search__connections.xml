<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search_Connections">


    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/search_connection"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:visibility="visible"
        >


        <EditText
            android:id="@+id/search_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Search for Connections"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            />

        <ImageView
            android:id="@+id/img_srch"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/search_icon"
            android:layout_toRightOf="@+id/search_txt"
            />


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_connection_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_connection"
        android:layout_margin="10dp"
        />

</RelativeLayout>