<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_pending"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="15sp"
        android:background="@drawable/white_oval"
        android:elevation="10dp">

        <TextView
            android:id="@+id/pd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Order Status : "
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/pd_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="Pending"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/orange_500"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ordr_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pd_txt"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:text="Date"
            android:textColor="@color/orange_500"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_sl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ordr_dt"
            android:layout_marginTop="-10dp"
            android:src="@drawable/straight_line" />

        <TextView
            android:id="@+id/Order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_sl"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-12dp"
            android:text="Order ID "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fst_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Order_id"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="Course details"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/ttl_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fst_course"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="Course Count"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/see_more_btn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/ttl_course"
            android:layout_marginStart="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="18sp"
            android:background="@color/orange_500"
            android:text="See More"
            android:textColor="@color/white"
            android:textSize="15dp"
/>

    </RelativeLayout>

</RelativeLayout>