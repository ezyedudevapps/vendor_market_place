<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

    <RelativeLayout
        android:id="@+id/ven_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_oval"
        android:elevation="5dp"
        android:layout_margin="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_to_update"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/txt_artiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@id/image_to_update"
            android:layout_marginStart="15sp"
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <RelativeLayout
            android:id="@+id/star_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17sp"
            android:layout_below="@+id/txt_artiles"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/image_to_update"
            >
            <ImageView
                android:id="@+id/rating_img"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:layout_alignParentStart="true"
                android:src="@drawable/star_full"
                />
            <ImageView
                android:id="@+id/rating_img_empty"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:src="@drawable/empty"
                />


            <ImageView
                android:id="@+id/rating_img_1"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/rating_img_empty_1"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:layout_toRightOf="@id/rating_img_empty"
                android:src="@drawable/empty"
                />



            <ImageView
                android:id="@+id/rating_img_2"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_1"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />


            <ImageView
                android:id="@+id/rating_img_empty_2"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_empty_1"
                android:src="@drawable/empty"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/rating_img_3"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_2"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/rating_img_empty_3"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_empty_2"
                android:src="@drawable/empty"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/rating_img_4"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_3"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/rating_img_empty_4"
                android:layout_width="25sp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/rating_img_empty_3"
                android:src="@drawable/empty"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/smc_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ven_relative"
        >

        <RelativeLayout
            android:id="@+id/sos_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/pp_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gtk"
                />
            <TextView
                android:id="@+id/ppt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/pp_img"
                android:background="@drawable/white_new_oval"
                android:hint="Type Link"
                android:gravity="center"
                android:maxLines="1"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sos_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_below="@+id/sos_1"
            >
            <ImageView
                android:id="@+id/twitter_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gtw"
                />
            <TextView
                android:id="@+id/get_twitter"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/twitter_img"
                android:background="@drawable/white_new_oval"
                android:hint="Type Link"
                android:maxLines="1"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/sos_3"
            android:layout_below="@+id/sos_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/youtube_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gyt"
                />
            <TextView
                android:id="@+id/get_youtube"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/youtube_img"
                android:background="@drawable/white_new_oval"
                android:hint="Type Link"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:layout_marginEnd="5dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sos_4"
            android:layout_below="@+id/sos_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/linkedin_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/linkedin"
                />
            <TextView
                android:id="@+id/get_linkedin"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/linkedin_img"
                android:background="@drawable/white_new_oval"
                android:hint="Type Link"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/sos_5"
            android:layout_below="@+id/sos_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/imstagram_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gig"
                />
            <TextView
                android:id="@+id/get_instagram"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/imstagram_img"
                android:background="@drawable/white_new_oval"
                android:hint="Type Link"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sos_6"
            android:layout_below="@+id/sos_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/vimeo_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/vimeo"
                />
            <TextView
                android:id="@+id/get_vimeo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/vimeo_img"
                android:background="@drawable/white_new_oval"
                android:hint="Type Link"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sos_7"
            android:layout_below="@+id/sos_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/sixdeep_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sixdeep"
                />
            <TextView
                android:id="@+id/get_sixdeep"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/sixdeep_img"
                android:background="@drawable/white_new_oval"
                android:hint="Type Link"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sos_8"
            android:layout_below="@+id/sos_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/fb_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gfb"
                />
            <TextView
                android:id="@+id/get_fb"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/fb_img"
                android:background="@drawable/white_new_oval"
                android:hint="Type Link"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:layout_marginEnd="5dp"
                />
        </RelativeLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wedsite"
        android:layout_margin="15sp"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

       <TextView
           android:id="@+id/web_pg_ven"
           android:layout_width="match_parent"
           android:layout_height="35sp"
           android:background="@drawable/white_new_oval"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:textAlignment="center"
           android:gravity="center"
           android:textColor="@color/blue_300"
           android:textStyle="bold"
           />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-Mail"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/mail_pg_ven"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/white_new_oval"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operating Days"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/m"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/green_50"
                    android:gravity="center"
                    android:text="M"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/t"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/m"
                    android:background="@color/green_50"
                    android:gravity="center"
                    android:text="T"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/w"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/t"
                    android:background="@color/green_50"
                    android:gravity="center"
                    android:text="W"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/th"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/w"
                    android:background="@color/green_50"
                    android:gravity="center"
                    android:text="T"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/f"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/th"
                    android:background="@color/green_50"
                    android:gravity="center"
                    android:text="F"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/s"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/f"
                    android:background="@color/green_50"
                    android:gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/su"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/s"
                    android:background="@color/green_50"
                    android:gravity="center"
                    android:text="S"
                    android:textAlignment="center"
                    android:textColor="@color/black" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operating Hours"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/working_hrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8:00 AM - 10 PM"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/orange_500"
                android:layout_marginStart="15sp"
                android:layout_marginBottom="5dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_margin="15sp"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/address_pg_ven"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/white_new_oval"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:gravity="center"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>