<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map_dragger_activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_map"
        android:layout_above="@id/address_relative"
        >

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/google_map_mark"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            />


        <ImageView
            android:id="@+id/my_loc_icon"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/my_location_new"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="15sp"
            android:layout_marginBottom="25sp"
            android:padding="8dp"
            />

    </RelativeLayout>



    <ImageView
        android:id="@+id/img_map_move"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_person_pin_circle_24"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="210dp"
        />




    <RelativeLayout
        android:id="@+id/address_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_below="@+id/shimmer_frame_layout"
            android:id="@+id/address_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:text="Address"
            android:layout_marginTop="15sp"
            android:padding="8dp"
            />

        <EditText
            android:id="@+id/ed_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_below="@id/address_txt"
            android:background="@drawable/bg_round"
            android:padding="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            />
        <Button
            android:id="@+id/address_select_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/ed_address"
            android:background="@color/orange_400"
            android:text="Continue"
            android:textColor="@color/white"
            android:textStyle="bold"
            />




    </RelativeLayout>



</RelativeLayout>