<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/relative_course"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:background="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_logo"
            android:layout_width="40sp"
            android:layout_height="47sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/empty_profile_picture"
            android:elevation="5dp"
            />

        <TextView
            android:id="@+id/tittle_product"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/img_logo"
            android:text="Tittle"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20sp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/product_start_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tittle_product"
            android:layout_toRightOf="@id/img_logo"
            android:text="Start Date"
            android:layout_marginTop="5sp"
            android:layout_marginStart="20sp"
            android:textSize="15sp"
            android:textColor="@color/orange_500"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for Approval"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:layout_marginEnd="25sp"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/orange_500"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
</RelativeLayout>