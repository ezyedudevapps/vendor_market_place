<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/relative_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_oval"
        android:layout_margin="10sp"
        android:elevation="5dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_logo"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            />
        <TextView
            android:id="@+id/description_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:text="Description"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/user_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_logo"
            android:text="Tittle"
            android:layout_marginTop="15sp"
            android:layout_marginStart="20sp"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />


        <RelativeLayout
            android:id="@+id/Rating_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_logo"
            android:layout_marginStart="7sp"
            android:layout_below="@id/user_review"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:id="@+id/rating_img"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_alignParentStart="true"
                android:src="@drawable/star_full"
                android:layout_marginStart="10sp"
                />
            <ImageView
                android:id="@+id/rating_img_empty"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:src="@drawable/empty"
                android:layout_marginStart="10sp"
                />


            <ImageView
                android:id="@+id/rating_img_1"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/rating_img"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/rating_img_empty_1"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:visibility="invisible"
                android:layout_toRightOf="@id/rating_img_empty"
                android:src="@drawable/empty"
                />



            <ImageView
                android:id="@+id/rating_img_2"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/rating_img_1"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />


            <ImageView
                android:id="@+id/rating_img_empty_2"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/rating_img_empty_1"
                android:src="@drawable/empty"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/rating_img_3"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/rating_img_2"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/rating_img_empty_3"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/rating_img_empty_2"
                android:src="@drawable/empty"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/rating_img_4"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/rating_img_3"
                android:src="@drawable/star_full"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/rating_img_empty_4"
                android:layout_width="25sp"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/rating_img_empty_3"
                android:src="@drawable/empty"
                android:visibility="invisible"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>