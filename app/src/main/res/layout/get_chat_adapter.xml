<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/sender_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender message"
        android:layout_alignParentEnd="true"
        android:background="@color/orange_500"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="5sp"
        android:textSize="17sp"
        android:layout_marginStart="140sp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/reciver_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reciever message"
        android:background="@color/orange_500"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="140sp"
        android:textSize="17sp"
        android:layout_below="@+id/sender_message"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="8dp"
        />


</RelativeLayout>