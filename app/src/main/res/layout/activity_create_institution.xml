<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_institution">


    <RelativeLayout
        android:id="@+id/abc_rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_500"
        >

        <TextView
            android:id="@+id/cat_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor Category"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginStart="20sp"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <EditText
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/search_course_edit"
            android:hint="Search for Vendor Category"
            android:visibility="visible"
            android:textAlignment="center"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:background="@drawable/white_oval"
            android:layout_below="@+id/cat_txt"
            android:layout_marginBottom="15sp"
            />

    </RelativeLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/abc_rel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ven_cat_recyc"
        android:layout_margin="10dp"

        />


    <Button
        android:id="@+id/add_ven_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="ADD CATEGORY"
        android:background="@color/white"
        android:textColor="@color/orange_500"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:layout_margin="20sp"
        android:elevation="5dp"
        />
</RelativeLayout>