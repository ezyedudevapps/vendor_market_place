<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Add_Bannner_Activity">

    <TextView
        android:id="@+id/add_bnr_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Banners"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/orange_500"
        android:padding="8dp"
        android:textSize="17sp"
        />
    <TextView
        android:id="@+id/tittle_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tittle"
        android:textSize="15sp"
        android:layout_below="@id/add_bnr_txt"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <EditText
        android:id="@+id/tittle_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tittle_txt"
        android:hint="Type Here"
        android:padding="6dp"
        android:background="@drawable/white_new_oval"
        android:layout_margin="10dp"
        />

    <ImageView
        android:id="@+id/sl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/straight_line"
        android:layout_below="@id/tittle_get"
        android:layout_marginTop="-10dp"
        />
    <TextView
        android:id="@+id/description_txt_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="15sp"
        android:layout_below="@id/sl1"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        />
    <EditText
        android:id="@+id/desc_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_txt_txt"
        android:hint="Type Here"
        android:padding="6dp"
        android:background="@drawable/white_new_oval"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/sl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/straight_line"
        android:layout_below="@id/desc_get"
        android:layout_marginTop="-10dp"
        />
    <TextView
        android:id="@+id/image_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imge"
        android:textSize="15sp"
        android:layout_below="@id/sl2"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        />
    <RelativeLayout
        android:id="@+id/img_pick_relative"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/image_txt"
        android:background="@color/grey_50"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/img_pick"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_loupe_24"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Submit"
        android:layout_margin="30dp"
        android:background="@drawable/ezy_oval"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:elevation="5dp"
        android:layout_below="@+id/img_pick_relative"
        android:textAlignment="center"
        />




</RelativeLayout>