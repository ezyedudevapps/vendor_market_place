<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Order_Info_Page">

    <RelativeLayout
        android:id="@+id/od_rel1"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/od_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Details"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/od_rel1"
        android:layout_marginTop="10sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rel_status"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                >
                <TextView
                    android:id="@+id/Order_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status :"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="10sp"
                    />
                <TextView
                    android:id="@+id/pending_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:layout_marginEnd="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/white"
                    android:layout_marginStart="10sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/od_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order ID "
                    android:layout_marginTop="10sp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="10sp"
                    />

                <TextView
                    android:id="@+id/ord_ide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="10sp"
                    android:layout_alignParentEnd="true"
                    android:textSize="14sp"
                    android:layout_marginEnd="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:layout_marginStart="10sp"
                    />

                <ImageView
                    android:id="@+id/img_st"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/straight_line"
                    android:layout_below="@+id/od_txt"
                    android:layout_marginTop="-5sp"
                    />
                <TextView
                    android:id="@+id/oi_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Information"
                    android:textSize="16sp"
                    android:layout_below="@id/img_st"
                    android:layout_marginTop="-5sp"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/od_ven_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:layout_below="@id/oi_info"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    />
                <TextView
                    android:id="@+id/od_ven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/oi_info"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    />


                <TextView
                    android:id="@+id/od_dt_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_below="@id/od_ven_txt"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    />
                <TextView
                    android:id="@+id/od_dt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/od_ven_txt"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    />

                <ImageView
                    android:id="@+id/slt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/straight_line"
                    android:layout_below="@id/od_dt_txt"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slt"
                    android:text="Products"
                    android:layout_marginStart="10sp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="-5sp"
                    />
                <TextView
                    android:id="@+id/itms_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/slt"
                    android:text="Products"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20sp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="-5sp"
                    />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/od_recyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="5sp"
                />
            <ImageView
                android:id="@+id/slti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/straight_line"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100sp"
                >

                <TextView
                    android:id="@+id/od_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/od_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="40sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/od_discount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="12sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/od_price_txt"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/od_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/od_price_txt"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="40sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/od_final_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="12sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/od_discount"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/od_final"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/od_discount_txt"
                    android:text=""
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:textSize="16sp"
                    android:layout_marginEnd="40sp"
                    android:textColor="@color/orange_500"
                    android:textStyle="bold"
                    />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/others_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_others"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="5sp"
            />
        <Button
            android:id="@+id/chat_ven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Chat Now"
            android:visibility="gone"
            android:layout_marginBottom="5sp"
            android:layout_marginTop="5sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:background="@color/orange_500"
            />

    </RelativeLayout>


</RelativeLayout>