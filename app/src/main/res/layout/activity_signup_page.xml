<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_sign_background"
    tools:context=".Signup_page">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >





            <TextView
                android:id="@+id/sign_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_marginTop="15sp"
                />
            <TextView
                android:id="@+id/user_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                android:layout_marginTop="12dp"
                android:layout_below="@id/sign_tittle"
                android:layout_marginStart="15sp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/register_user_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_txt"
                android:background="@drawable/white_new_oval"
                android:padding="6dp"
                android:textAlignment="textStart"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginTop="10sp"
                android:hint=" Type Here"
                />

            <TextView
                android:id="@+id/mail_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-MAIL"
                android:layout_below="@id/register_user_get"
                android:layout_marginStart="15sp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                />

            <EditText
                android:id="@+id/register_mail_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mail_txt"
                android:background="@drawable/white_new_oval"
                android:padding="6dp"
                android:textAlignment="textStart"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginTop="10sp"
                android:hint=" Type Here"
                />

            <TextView
                android:id="@+id/pass_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PASSWORD"
                android:layout_below="@id/register_mail_get"
                android:layout_marginStart="15sp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                />


            <EditText
                android:id="@+id/register_pass_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pass_txt"
                android:background="@drawable/white_new_oval"
                android:padding="6dp"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginTop="10sp"
                android:hint=" ***"
                />

            <TextView
                android:id="@+id/conf_pass_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONFIRM PASSWORD"
                android:layout_below="@id/register_pass_get"
                android:layout_marginStart="15sp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                />

            <EditText
                android:id="@+id/register_conf_pass_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/conf_pass_txt"
                android:background="@drawable/white_new_oval"
                android:padding="6dp"
                android:inputType="textPassword"
                android:textAlignment="textStart"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginTop="10sp"
                android:hint=" ***"
                />


            <TextView
                android:id="@+id/referral_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REFERRAL CODE"
                android:layout_below="@id/register_conf_pass_get"
                android:layout_marginStart="15sp"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                />

            <EditText
                android:id="@+id/ref_code_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/referral_txt"
                android:background="@drawable/white_new_oval"
                android:padding="6dp"
                android:textAlignment="textStart"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:visibility="gone"
                android:layout_marginTop="10sp"
                android:hint=" Type Here"
                />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ezy_oval"
                android:text="Submit"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_below="@id/ref_code_get"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                />
            <TextView
                android:id="@+id/tc_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"

                android:gravity="center"
                android:layout_marginTop="20sp"
                android:textStyle="bold"
                android:text="By Signing up you agree to our Privacy Policy and Terms and Conditions"
                android:textColor="@color/white"
                android:layout_below="@id/register_btn"
                />

            <RelativeLayout
                android:id="@+id/median_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tc_txt"
                >
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/sign_in_fb_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/white"
                    app:elevation="8dp"
                    android:visibility="gone"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_facebook"
                    app:useCompatPadding="true" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/sign_in_google_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/white"
                    android:layout_toRightOf="@+id/sign_in_fb_btn"
                    app:elevation="8dp"
                    android:visibility="gone"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_google_plus"
                    app:useCompatPadding="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/median_relative"
                >

                <TextView
                    android:id="@+id/sign_up_cmd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already Have an account ?"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/sign_up_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:layout_below="@id/sign_up_cmd"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>