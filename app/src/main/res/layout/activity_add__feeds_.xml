<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Feeds_Activity">



    <TextView
        android:id="@+id/addd_course_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD FEEDS"
        android:textAlignment="center"
        android:padding="6dp"
        android:textStyle="bold"
        android:textColor="@color/orange_500"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:id="@+id/sl_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/straight_line"
        android:layout_below="@id/addd_course_txt"
        android:layout_marginTop="-10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sl_line"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <TextView
                android:id="@+id/c_im_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feeds Image"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                />
            <RelativeLayout
                android:id="@+id/relative_img1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/add_img"
                    android:layout_width="65dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="17sp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/white_oval"
                    android:layout_marginBottom="15dp"
                    android:elevation="3dp"
                    >
                    <ImageView
                        android:id="@+id/add_course_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/gpk"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/add_img1"
                    android:layout_width="65dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@id/add_img"
                    android:background="@drawable/white_oval"
                    android:layout_marginBottom="15dp"
                    android:elevation="3dp"
                    android:layout_marginTop="17sp"
                    android:layout_marginStart="15dp"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/add_course_image1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_pk"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_img2"
                    android:layout_width="65dp"
                    android:layout_height="80dp"
                    android:layout_toRightOf="@id/add_img1"
                    android:background="@drawable/white_oval"
                    android:layout_marginBottom="15dp"
                    android:elevation="3dp"
                    android:layout_marginTop="17sp"
                    android:layout_marginStart="15dp"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/add_course_image2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/img_pk"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_img"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tittle"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    />
                <EditText
                    android:id="@+id/add_course_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sl_line"
                    android:text="Description"
                    android:layout_marginStart="10dp"
                    android:textSize="17sp"
                    />
                <EditText
                    android:id="@+id/add_course_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sl_line"
                    android:text="Feeds Category"
                    android:layout_marginStart="10dp"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/txt_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Here"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:drawableEnd="@drawable/drop_down_icon"
                    android:layout_marginBottom="10dp"
                    />

                <Button
                    android:id="@+id/add_course_btn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@color/orange_500"
                    android:text="SUBMIT"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>