<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:elevation="3dp"
        android:layout_marginBottom="10sp"
        android:layout_margin="5sp"
        >


        <ImageView
            android:id="@+id/image_course"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            tools:ignore="MissingConstraints"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_backround" >
        </FrameLayout>




        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/ven_logo_new"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="15sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/ven_logo_new"
            android:layout_marginBottom="25sp"
            >

            <TextView
                android:id="@+id/txt_artiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_marginEnd="10sp"
                android:layout_marginStart="13sp"
                android:textColor="@color/white" />


            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="25sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/txt_artiles"
                >
                <ImageView
                    android:id="@+id/rating_img"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:visibility="invisible"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/star_full"
                    />
                <ImageView
                    android:id="@+id/rating_img_empty"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:visibility="invisible"
                    android:src="@drawable/empty"
                    />


                <ImageView
                    android:id="@+id/rating_img_1"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/rating_img"
                    android:src="@drawable/star_full"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:id="@+id/rating_img_empty_1"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:visibility="invisible"
                    android:layout_toRightOf="@id/rating_img_empty"
                    android:src="@drawable/empty"
                    />



                <ImageView
                    android:id="@+id/rating_img_2"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/rating_img_1"
                    android:src="@drawable/star_full"
                    android:visibility="invisible"
                    />


                <ImageView
                    android:id="@+id/rating_img_empty_2"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/rating_img_empty_1"
                    android:src="@drawable/empty"
                    android:visibility="invisible"

                    />

                <ImageView
                    android:id="@+id/rating_img_3"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/rating_img_2"
                    android:src="@drawable/star_full"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:id="@+id/rating_img_empty_3"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/rating_img_empty_2"
                    android:src="@drawable/empty"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:id="@+id/rating_img_4"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/rating_img_3"
                    android:src="@drawable/star_full"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:id="@+id/rating_img_empty_4"
                    android:layout_width="25sp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/rating_img_3"
                    android:src="@drawable/empty"
                    android:visibility="invisible"
                    />

            </RelativeLayout>








        </RelativeLayout>



    </RelativeLayout>



</RelativeLayout>