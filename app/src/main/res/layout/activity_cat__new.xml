<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cat_Activity_new">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSTITUTION"
        android:id="@+id/institution_nm"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="@color/orange_500"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_above="@+id/rel_tst_snd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:splitMotionEvents="false"
        android:layout_below="@+id/institution_nm"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:id="@+id/chat_recycler"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5sp"
        android:id="@+id/rel_tst_snd"

        >

        <EditText
            android:id="@+id/text_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_new_oval"
            android:padding="8dp"
            android:layout_marginStart="5sp"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:layout_toLeftOf="@+id/send_chat_btn"
            android:hint="Type Here"

            />
        <ImageButton
            android:id="@+id/send_chat_btn"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send_white_24dp"
            android:layout_marginEnd="7sp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>