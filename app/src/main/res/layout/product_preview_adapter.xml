<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/white_oval"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:id="@+id/course_card"

        ><de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:id="@+id/image_course"
        />

        <TextView
            android:id="@+id/text_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tittle"
            android:layout_toRightOf="@id/image_course"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:maxLines="1"
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/course_inst_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tittle"
            android:layout_below="@id/text_course"
            android:layout_toRightOf="@id/image_course"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/orange_300"
            android:maxLines="1"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/course_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tittle"
            android:layout_below="@id/course_inst_author"
            android:layout_toRightOf="@id/image_course"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/course_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tittle"
            android:layout_below="@id/course_date"
            android:layout_toRightOf="@id/image_course"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="15sp"
            />








    </RelativeLayout>

</RelativeLayout>