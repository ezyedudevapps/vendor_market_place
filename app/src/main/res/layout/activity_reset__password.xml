<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_sign_background"
    tools:context=".Reset_Password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/forget_pass_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_marginTop="20sp"
            />
        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:layout_below="@+id/forget_pass_btn"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="10sp"
            />

        <EditText
            android:id="@+id/get_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_txt"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="15sp"
            android:background="@drawable/white_new_oval"
            android:hint="Enter OTP"
            android:inputType="number"
            android:padding="6dp"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:layout_below="@+id/get_otp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="10sp"
            />
        <EditText
            android:id="@+id/get_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_txt"
            android:background="@drawable/white_new_oval"
            android:padding="6dp"
            android:textAlignment="center"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:inputType="textPassword"
            android:layout_marginTop="10sp"
            android:hint="Type Here"
            />
        <Button
            android:id="@+id/sbmit_btn"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:background="@drawable/ezy_oval"
            android:text="Submit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:elevation="5dp"
            android:padding="2dp"
            android:layout_below="@id/get_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            />
    </RelativeLayout>

</RelativeLayout>