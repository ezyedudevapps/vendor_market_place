<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_sign_background"
    tools:context=".Change_password">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/img_ezyedu_text_logo"
            android:layout_above="@id/a1"
            />
        <TextView
            android:id="@+id/chng_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:layout_marginTop="15sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="17sp"
        />

    <EditText
        android:id="@+id/current_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_pass"
        android:background="@drawable/white_new_oval"
        android:padding="6dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:textAlignment="center"
        android:layout_marginTop="10sp"
        android:hint="*****"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:layout_marginTop="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <EditText
            android:id="@+id/new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pass"
            android:background="@drawable/white_new_oval"
            android:padding="6dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:hint="*****"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_marginTop="15sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <EditText
            android:id="@+id/confirm_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_pass"
            android:background="@drawable/white_new_oval"
            android:padding="6dp"
            android:inputType="textPassword"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:hint="*****"
            />

        <Button
            android:id="@+id/change_password_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:background="@color/orange_500"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="15sp"
            />


    </LinearLayout>

</RelativeLayout>