<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    tools:context=".Connection_Actiivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <include
            layout="@layout/main_toolbar"
            />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:id="@+id/search_connection"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/white_oval"
            android:elevation="5dp"
            >


            <EditText
                android:id="@+id/search_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="search for connections"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                />

            <ImageView
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/search_icon"
                android:layout_toRightOf="@+id/search_txt"
                />


        </RelativeLayout>


        <TextView
            android:id="@+id/pend_req_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Pending Requests"
            android:textStyle="bold"
            android:textColor="@color/orange_500"
            android:layout_margin="10dp"
            android:textSize="16sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pending_recyc"
            android:visibility="gone"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
        <TextView
            android:id="@+id/my_conn_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="My Connections"
            android:textStyle="bold"
            android:textColor="@color/orange_500"
            android:layout_margin="10dp"
            android:textSize="16sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_connection_recyc"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:id="@+id/my_request_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Requests"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="@color/orange_500"
            android:layout_margin="10dp"
            android:textSize="16sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/my_request_recyc"
            android:visibility="gone"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />



        <ImageView
            android:id="@+id/i11"
            android:layout_width="190sp"
            android:visibility="gone"
            android:layout_height="190sp"
            android:src="@drawable/empty_history"
            android:layout_marginTop="50sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/t11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Connections Found"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        >

        <include
            layout="@layout/main_nav_drawer"
            />

    </RelativeLayout>




</androidx.drawerlayout.widget.DrawerLayout>