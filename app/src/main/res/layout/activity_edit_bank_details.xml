<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_bank_details">


    <TextView
        android:id="@+id/add_bk_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Bank Details"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/orange_500"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/tittle_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bank Account Number"
        android:textSize="15sp"
        android:layout_below="@id/add_bk_txt"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <EditText
        android:id="@+id/acc_num_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tittle_txt"
        android:hint="Type Here"
        android:padding="15dp"
        android:inputType="number"
        android:maxLines="1"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/acc_num_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Holder Name "
        android:textSize="15sp"
        android:layout_below="@id/acc_num_get"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <EditText
        android:id="@+id/tittle_get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/acc_num_txt"
        android:hint="Type Here"
        android:padding="15dp"
        android:maxLines="1"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/bank_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tittle_get"
        android:text="Bank Name"
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txt_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Here"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/bank_name_txt"
        android:padding="10dp"
        android:drawableEnd="@drawable/drop_down_icon"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/add_bnk_account"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_categories"
        android:layout_marginTop="15sp"
        android:text="update"
        android:background="@drawable/orange_new_oval"
        android:textColor="@color/white"
        android:textStyle="bold"
        />



</RelativeLayout>